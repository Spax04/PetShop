@model PetShop.Model.Login
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>
<div>
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="UserName"></label><br />
            <input class="Input" asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input class="Input" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="isAdmin"></label><br />
            <input type="checkbox"  asp-for="isAdmin" />
            <span asp-validation-for="isAdmin"></span>
        </div>
        <div class="form-group">
            <input class="btn" type="submit" value="Register" />
        </div>
    </form>
</div>

